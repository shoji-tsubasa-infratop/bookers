<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

<div class="box-text">Title</div>
<%= f.text_field :title %>

<div class="box-text">Body</div>
<%= f.text_area :body %>

<div class="box-text">
<%= f.submit 'Update Book' %>

<% end %>

<div class="box-text">
<%= link_to 'Show', book_path(@book.id) %>
<span>|</span>
<%= link_to 'Back', books_path %>
</div>