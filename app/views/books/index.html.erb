<div class="massage-success">
  <%= flash[:notice] %>
</div>

<h1>Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to 'Show', book_path(book.id) %>
        <%= link_to 'Edit', edit_book_path(book.id) %>
        <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm"=>"Are you sure?" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>



<h2>New book</h2>
<div class="massage-failed">
  <%= flash[:danger] %>
</div>
<%= form_with model: @books, url: books_path, method: :post do |f| %>

<div class="box-text">Title</div>
<%= f.text_field :title %>

<div class="box-text">Body</div>
<%= f.text_area :body %>

<div class="box-text">
<%= f.submit 'Create Book' %>
</div>

<% end %>
